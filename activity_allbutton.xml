<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllButtonActivity">

    <ImageButton
        android:id="@+id/Button_Yandex"
        android:layout_width="101dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#FFFFFF"
        android:src="@drawable/yandex"
        tools:src="@drawable/yandex"/>

    <ImageButton
        android:id="@+id/Button_Mail"
        android:layout_width="101dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/mail"
        android:background="#FFFFFF"
        android:translationX="120dp"
        tools:arc="@drawable/mail"/>

    <ImageButton
        android:id="@+id/Button_Google"
        android:layout_width="101dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/gl"
        android:translationX="240dp"
        tools:src="@drawable/gmail_googlel"
        tools:srcCompat="@drawable/gl" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Яндекс Почта"
        android:textColor="#070707"
        android:textSize="18sp"
        android:translationX="5dp"
        android:translationY="120dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail Почта"
        android:textColor="#070707"
        android:textSize="18sp"
        android:translationX="135dp"
        android:translationY="120dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gmail Почта"
        android:textColor="#070707"
        android:textSize="18sp"
        android:translationX="250dp"
        android:translationY="120dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/radioGroup"
        android:translationY="350dp" >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скачивание файла без изменений"
            android:textColor="#070707"
            android:textSize="18sp"
            />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить информацию о пользователе в свойства файла"
            android:textColor="#070707"
            android:textSize="18sp"
            />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Внедрить в файл цифровой водяной знак"
            android:textColor="#070707"
            android:textSize="18sp"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройте процесс скачивания файла:"
        android:textColor="#070707"
        android:textSize="18sp"
        android:translationX="5dp"
        android:translationY="320dp" />
</RelativeLayout>
